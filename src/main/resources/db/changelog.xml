<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1757758918782-1" author="XIII">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
        </createTable>
        <insert tableName="users">
            <column name="username" value="Jack Ryan"/>
        </insert>
        <insert tableName="users">
            <column name="username" value="Nick Fury"/>
        </insert>
    </changeSet>
    <changeSet id="1757761244288-1" author="XIII">
        <createTable tableName="departments">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_departments"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
        <addColumn tableName="users">
            <column name="department_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_departments"/>
            </column>
        </addColumn>
        <insert tableName="departments">
            <column name="name" value="Department of War"/>
        </insert>
        <insert tableName="departments">
            <column name="name" value="Department of Intelligence"/>
        </insert>
        <update tableName="users">
            <column name="department_id" value="1"/>
            <where>id=1</where>
        </update>
        <update tableName="users">
            <column name="department_id" value="2"/>
            <where>id=2</where>
        </update>
    </changeSet>

</databaseChangeLog>